spotcolor = #46aaa8
spotcolor2 = #FFBEFC

.resultview
	ul.entries
		li
			margin-bottom 12px
			cursor pointer

			&:hover
				label
					background lighten(spotcolor, 70%)
			
			.edit-mode
				display none

				input
					display inline-block
					margin-right 4px
			
			label
				text-decoration none
				color black
				font-size 1.2rem
				padding 2px 4px
				border-radius 2px
				cursor pointer

			.found
				color white
				background #999
				border-radius 2px
				display inline-block
				padding 0 2px
				margin 10px 0 4px 13px
			
			.metadata
				ul
					list-style none
					padding 4px 0 0 12px

					li
						margin-bottom 0px
						// display inline-block
						// width 30%

						span.key
							color #999

			.keywords
				color #999

				ul
					list-style none

					li
						padding 2px 0
						margin 0
						margin-left 13px
						overflow-x hidden
						white-space nowrap
						text-overflow ellipsis
						line-height 16px

						span.textlayer
							display inline-block
							overflow ellipsis
							width 120px

						em
							background lighten(#FF0, 40%)
							padding 2px 5px 1px 5px
							-webkit-border-radius 4px
							border-radius 4px
							-webkit-box-shadow 1px 1px 2px #CCC
							box-shadow 1px 1px 2px #CCC