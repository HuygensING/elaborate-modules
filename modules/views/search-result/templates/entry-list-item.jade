- randomID = generateID()

//- li.entry(id='entry'+entryData.id)
.edit-mode
	input(type="checkbox", data-id=entryData.id, id=randomID)
	label(for=randomID)= entryData.name
.default-mode
	label= entryData.name

.metadata
	ul
		each value, key in entryData.metadata
			li
				span.key= key+': '
				span.value= value

if fulltext
	.found= found
	.keywords
		ul
			if entryData._kwic != null
				each kwic, container in entryData._kwic
					each row in kwic
						li!= '<span class="textlayer">'+container + '</span> '+ row						